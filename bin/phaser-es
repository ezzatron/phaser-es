#!/usr/bin/env node

const minimist = require('minimist')

const compile = require('../src')

const {
  module: moduleId = 'phaser',
  constraint = '^3',
  _: [outputPath = 'phaser-es'],
} = argv = minimist(process.argv.slice(2))

compile({moduleId, constraint, outputPath, logger: console}).catch(error => console.error(error))
